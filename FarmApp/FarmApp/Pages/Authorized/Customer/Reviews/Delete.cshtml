@page "{id:int?}"
@model FarmApp.Pages.Authorized.Customer.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Authorized/Shared/_AppLayout.cshtml";
}

<h1>Delete Review</h1>

<h3>Are you sure?</h3>
<div>
    <h4>@Model.Review.Shop.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.ModifiedDate)
        </dd>
    </dl>

    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Review.Id" />
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
    <div>
        <a href="/Authorized/Customer/Reviews/@Model.Review.Shop.Id">Back to Reviews</a>
    </div>
</div>
