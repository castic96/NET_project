@page "{id:int?}"
@model FarmApp.Pages.Authorized.Customer.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Authorized/Shared/_AppLayout.cshtml";
}

<h1>Edit Review</h1>

<h4>@Model.Review.Shop.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id" />
            <div class="form-group">
                <label asp-for="Review.Rating" class="control-label"></label>
                <input type="number" min="1" max="5" asp-for="Review.Rating" class="form-control" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Comment" class="control-label"></label>
                <textarea asp-for="Review.Comment" class="form-control" style="height: 100pt;"></textarea>
                <span asp-validation-for="Review.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Review.CreateDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Authorized/Customer/Reviews/@Model.Review.Shop.Id">Back to Reviews</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
