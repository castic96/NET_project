@page "{id:int?}"
@model FarmApp.Pages.Authorized.Farmer.ReviewModel

@{
    ViewData["Title"] = "Review";
    Layout = "~/Pages/Authorized/Shared/_AppLayout.cshtml";
}

<h1>Reviews</h1>
<a href="/Authorized/Farmer/Shops/Details/@Model.Shop.Id" ><i class="fas fa-caret-square-left fa-2x"></i></a>
<hr />

<div>
    <h4>@Html.DisplayFor(model => model.Shop.Name)&nbsp;&nbsp;</h4>
    <div class="product-head d-flex justify-content-between align-items-center">
        <div class="rating-stars">
            <i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star active"></i><i class="fa fa-star"></i>
        </div>
    </div>
    <hr />

    @foreach (var item in Model.Review)
    {
        <div class="row  d-flex align-items-center">
            <div class="col-lg-4 col-md-6 col-sm-8 text-center">
                <div class="row">
                    <div class="col">
                        <b>@Html.DisplayFor(modelItem => item.Author.UserName)</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Rating) stars
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <small><i>@Html.DisplayFor(modelItem => item.CreateDate)</i></small>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-6 col-sm-4" style="border-left: solid 0.5px lightgrey;">
                @Html.DisplayFor(modelItem => item.Comment)
            </div>
        </div>
        <hr />
    }

</div>
