@page "{id:int?}"
@model FarmApp.Pages.Authorized.Farmer.Shops.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Authorized/Shared/_AppLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this shop?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shop.ModifiedDate)
        </dd>
    </dl>

    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Shop.Id" />
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>        
    </form>
    <div>
        <a asp-page="./Index">Back to My Shops</a>
    </div>
</div>
