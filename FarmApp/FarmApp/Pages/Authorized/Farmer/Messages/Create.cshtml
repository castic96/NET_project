@page "{id1:int}/{id2}"
@model FarmApp.Pages.Authorized.Farmer.Messages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Authorized/Shared/_AppLayout.cshtml";
}

<h1>Send Message</h1>

<h4>To: @Model.LoadedUser.UserName</h4>
<h6>From: @Model.Shop.Name</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Message</label>
                <textarea asp-for="Message.Content" class="form-control"></textarea>
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
